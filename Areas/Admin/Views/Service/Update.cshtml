
@model UpdateServiceVM

<div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Create</h4>
                  <form class="forms-sample" method="post" enctype="multipart/form-data">
                      <div asp-validation-summary="ModelOnly"></div>
                      <div class="form-group">
                      <label asp-for="Photo">Photo</label>
                      <input asp-for="Photo" type="text" class="form-control" id="exampleInputUsername1" placeholder="Photo">
                      <span asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Name">Name</label>
                      <input asp-for="Name" type="text" class="form-control" id="exampleInputUsername1" placeholder="Name">
                      <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Description">Description</label>
                      <input asp-for="Description" type="text" class="form-control" id="exampleInputUsername1" placeholder="Description">
                      <span asp-validation-for="Description"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button class="btn btn-light" asp-action="index" asp-controller="service">Cancel</button>
                  </form>
                </div>
              </div>
</div>